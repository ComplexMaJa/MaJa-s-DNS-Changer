{
    "name": "majas-dns-changer",
    "version": "1.0.0",
    "description": "MaJa's DNS Changer - Smart DNS Optimization Tool",
    "main": "dist-electron/main.js",
    "author": "MaJa",
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build && tsc -p electron/tsconfig.json",
        "preview": "vite preview",
        "electron:compile": "tsc -p electron/tsconfig.json",
        "electron:dev": "pnpm electron:compile && concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "pnpm electron:compile && pnpm build && electron-builder",
        "lint": "eslint ."
    },
    "dependencies": {
        "framer-motion": "^12.34.3",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "recharts": "^3.7.0"
    },
    "devDependencies": {
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@types/react": "^19.0.0",
        "@types/react-dom": "^19.0.0",
        "@vitejs/plugin-react": "^4.3.4",
        "concurrently": "^9.1.0",
        "electron": "^34.0.0",
        "electron-builder": "^25.1.8",
        "typescript": "~5.7.0",
        "vite": "^6.1.0",
        "wait-on": "^8.0.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "electron",
            "esbuild"
        ]
    },
    "build": {
        "appId": "com.maja.dnschanger",
        "productName": "MaJa's DNS Changer",
        "compression": "maximum",
        "asar": true,
        "electronLanguages": [
            "en"
        ],

        "files": [
            "dist/**/*",
            "dist-electron/**/*",
            "assets/**/*",
            "build/icon.ico",
            "!**/*.map",
            "!src/**",
            "!electron/**/*.ts",
            "!node_modules/.cache/**",
            "!node_modules/**/test/**",
            "!node_modules/**/*.md"
        ],
        "extraResources": [
            {
                "from": "build/icon.ico",
                "to": "icon.ico"
            }
        ],
        "directories": {
            "output": "release"
        },
        "win": {
            "icon": "build/icon.ico",
            "target": [
                "nsis",
                "portable"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "build/icon.ico",
            "uninstallerIcon": "build/icon.ico",
            "installerHeaderIcon": "build/icon.ico",
            "installerSidebar": "build/installerSidebar.bmp",
            "uninstallerSidebar": "build/installerSidebar.bmp"
        }
    }
}